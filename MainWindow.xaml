<Window x:Class="practos4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practos4"
        mc:Ignorable="d"
        Title="Калькулятор" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Дисплей -->
        <TextBox x:Name="Display" Grid.Row="0" FontSize="24" HorizontalAlignment="Stretch" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Right" 
                 Margin="10" Padding="10" IsReadOnly="True" Text="0"/>

        <!-- Кнопки -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Цифры 7-9 -->
            <Button x:Name="Btn7" Content="7" Grid.Row="1" Grid.Column="0" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn8" Content="8" Grid.Row="1" Grid.Column="1" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn9" Content="9" Grid.Row="1" Grid.Column="2" FontSize="20" Margin="5" Click="Number_Click"/>

            <!-- Цифры 4-6 -->
            <Button x:Name="Btn4" Content="4" Grid.Row="2" Grid.Column="0" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn5" Content="5" Grid.Row="2" Grid.Column="1" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn6" Content="6" Grid.Row="2" Grid.Column="2" FontSize="20" Margin="5" Click="Number_Click"/>

            <!-- Цифры 1-3 -->
            <Button x:Name="Btn1" Content="1" Grid.Row="3" Grid.Column="0" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn2" Content="2" Grid.Row="3" Grid.Column="1" FontSize="20" Margin="5" Click="Number_Click"/>
            <Button x:Name="Btn3" Content="3" Grid.Row="3" Grid.Column="2" FontSize="20" Margin="5" Click="Number_Click"/>

            <!-- Цифра 0 -->
            <Button x:Name="Btn0" Content="0" Grid.Row="4" Grid.Column="1" FontSize="20" Margin="5" Click="Number_Click"/>

            <!-- Операции -->
            <Button x:Name="BtnAdd" Content="+" Grid.Row="1" Grid.Column="3" FontSize="20" Margin="5" Click="Operation_Click"/>
            <Button x:Name="BtnSubtract" Content="-" Grid.Row="2" Grid.Column="3" FontSize="20" Margin="5" Click="Operation_Click"/>
            <Button x:Name="BtnMultiply" Content="×" Grid.Row="3" Grid.Column="3" FontSize="20" Margin="5" Click="Operation_Click"/>
            <Button x:Name="BtnDivide" Content="÷" Grid.Row="4" Grid.Column="3" FontSize="20" Margin="5" Click="Operation_Click"/>

            <!-- Кнопка равно -->
            <Button x:Name="BtnEquals" Content="=" Grid.Row="4" Grid.Column="2" FontSize="20" Margin="5" Click="BtnEquals_Click"/>
        </Grid>
    </Grid>
</Window>
